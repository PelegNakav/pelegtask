pipeline {
    agent any
    
    tools {
        maven 'Maven'
        jdk 'JDK11'
    }
    
    environment {
        DOCKER_IMAGE = 'demo-app'
        DOCKER_TAG = "${BUILD_NUMBER}"
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                dir('demo-app') {
                    sh 'mvn clean package'
                }
            }
        }
        
        stage('Test') {
            steps {
                dir('demo-app') {
                    sh 'mvn test'
                }
            }
            post {
                always {
                    junit '**/target/surefire-reports/*.xml'
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                dir('demo-app') {
                    script {
                        sh "docker build --network=host -t ${DOCKER_IMAGE}:${DOCKER_TAG} ."
                    }
                }
            }
        }
    }
    
    post {
        success {
            echo "Build completed successfully! Docker image: ${DOCKER_IMAGE}:${DOCKER_TAG}"
        }
        failure {
            echo "Build failed! Check the logs for details."
        }
    }
}